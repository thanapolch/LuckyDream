@model LuckyDream.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout-Login.cshtml";
}
@section Styles{

    <style>

        .container {
            /*background-color: gray;*/
            padding: 25px;
        }
    </style>

}
<h2>Login</h2>
<div class="container">
    @*<div class="col align-self-center container">*@
        <div class="col-12 col-md-6 offset-sm-3">

            <div class="row">
                @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-login" }))
                {

                    @*<div class="form-group mb-3">
                            @Html.LabelFor(x => x.UserName)
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control input-login" })
                        </div>*@
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control input-login user-icon", placeholder = "Username", required = "required" })

                    </div>
                    <div class="form-group mb-3">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control input-login", placeholder = "Password", type = "password" })
                    </div>
                    <div>
                        <button class="btn btn-primary button-login" type="submit">Login</button>
                        <button class="btn btn-outline-danger button-login">Forgot Password</button>
                    </div>
                }

            </div>

        </div>
    @*</div>*@
</div>
